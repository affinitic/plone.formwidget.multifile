<tal:i18n i18n:domain="plone.formwidget.multifile">
  <li class="multifile-image multifile-file">
    <span tal:condition="options/download_url">
        <a tal:attributes="href options/download_url">
        <img tal:attributes="src options/download_url;
                             width view/thumb_width"
              class="multifile-hover"/></a>
    </span>
    <tal:EDITABLE tal:condition="options/editable">
      <span class="discreet">
        &mdash;
        <a href=""
           class="multifile-delete"
           i18n:translate="link_delete_file">delete</a>
      </span>
    </tal:EDITABLE>
    <div class="multifile-info">
        <br />
        <img tal:condition="options/icon" src="" alt=""
             tal:attributes="src options/icon"/>
        <a tal:omit-tag="not:options/download_url"
           tal:attributes="href options/download_url"
           ><span tal:condition="options/filename"
                  tal:content="options/filename"
                  class="filename"/>
        </a>
        <span class="discreet" tal:condition="options/size">
          &mdash;
          <tal:size replace="options/size" /> KB
        </span>
    </div>
  </li>
</tal:i18n>
